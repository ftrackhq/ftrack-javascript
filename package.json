{
  "name": "@ftrack/api",
  "description": "JavaScript API for ftrack.",
  "scripts": {
    "lint": "eslint . && prettier -c .",
    "test": "vitest --run test && yarn lint",
    "build": "vite build",
    "prepack": "yarn build",
    "prepublish": "yarn test"
  },
  "main": "./dist/ftrack-javascript-api.umd.js",
  "module": "./dist/ftrack-javascript-api.es.js",
  "types": "main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ftrack-javascript-api.es.js",
      "require": "./dist/ftrack-javascript-api.umd.js"
    }
  },
  "files": [
    "dist",
    "main.d.ts"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.27.0",
    "eslint-config-react-app": "^7.0.1",
    "jsdom": "^20.0.2",
    "lint-staged": "^13.0.3",
    "msw": "^0.48.1",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vitest": "^0.25.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ftrackhq/javascript-api.git"
  },
  "keywords": [
    "ftrack",
    "api",
    "library",
    "umd"
  ],
  "author": "ftrack",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ftrackhq/javascript-api/issues"
  },
  "homepage": "http://ftrack.com",
  "dependencies": {
    "loglevel": "^1.8.1",
    "moment": "^2.29.4",
    "uuid": "^9.0.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json,jsx,scss,yml}": "prettier --write"
  },
  "packageManager": "yarn@3.2.3"
}
